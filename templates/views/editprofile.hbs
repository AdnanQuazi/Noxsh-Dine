    <div class="edit-prof-sec1">
        <div class="wrapper">
            <div class="edit-det-con">
                <h1>Edit Profile</h1>
                <div class="wrap-con">
                    <div class="left-con">
                        <form action="">
                            <label class="profileImageLabel">

                            <img class="profileImg" src="" alt="">
                            
                            </label>

                            <button  class="changeImg" onclick="changeImg()">Save</button>
                            
                        </form>
                        <div class="input-group">
                            <h2>Choose Backgorund Color</h2>
                            <input type="color" name="backgroundColor" id="" onchange="colorSelected(this)">
                        </div>
                        <div class="avatars-wrap-con">
                            
                           
                        </div>
                    </div>
                    <div class="right-con">
                        <h2>Account</h2>
                        <form action="">
                              <input type="text" name="fullName" placeholder="Full Name">
                              <span class="text-danger text-danger-fullName">!</span>
                              <input type="text" name="username" placeholder="Username">
                              <span class="text-danger text-danger-username">!</span>

                              <input type="email" name="email" placeholder="E-Mail">
                              <span class="text-danger text-danger-email">!</span>  
                              <input type="text" name="phone" placeholder="Contact Number" readonly>    
                             <span class="text-danger text-danger-phone">!</span>
                        </form>
                        <h2>PRIVACY</h2>
                        <div class="priv-acc-div">
                            <span>Private Account</span>
                            <label class="switch">
                            <input type="checkbox" name="privateAccount" checked>
                            <span class="slider round"></span>
                            </label>
                        </div>
                        <h2>Account Type</h2>
                        <div class="priv-acc-div">
                            <span>Blogger Account</span>
                            <label class="switch">
                            <input type="checkbox" name="bloggerAccount" checked>
                            <span class="slider round"></span>
                            </label>
                        </div>
                        <button class="save-btn">Save</button>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
