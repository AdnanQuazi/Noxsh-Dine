                <span>LOG IN</span>
                <div class="input-details">
                <span>+91</span>
                <hr>
                <input type="text" name="phone" placeholder="Contact Number" required="true">
                </div>
                 <div class="input-details" style="margin-top: 3rem;">
                <span><i class="ri-eye-line"></i></span>
                                <hr>

                <input type="password" name="password" placeholder="Password" required="true">
                </div>
                <button type="submit" class="login-btn">Login</button>
                <span class="forgot-pass-link"> <a href="/forgot-password">Forgot Password?</a></span>
                <span class="new-acc-link">Don't Have an Account? <br><a href="/signup">Create Account .... It's Free</a></span>
            </div>
            <div class="wel-msg-con">
                <span>Welcome<br>Back</span>
            </div>
        </div>
    </div>
