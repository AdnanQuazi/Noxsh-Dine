            <div class="wrapper">
                <div class="banner-img-con">
                    <img class="prof-img" src="/images/profImg.jpg" alt="">
                     <div class="prof-det-con">
                        <span class="prof-name">{{profName}}</span>
                    <span class="prof-username">{{username}}</span>
                    </div>
                </div>
                <div class="edit-prof-btn-con">
                    <button class="edit-prof-btn" onclick="window.location.href='./edit-profile'">Edit Profile</button>
                     <div class="rf-holder-con">
                        <div class="review-count-con"><span class="review-count">00</span><span>Reviews</span></div>
                        <div class="followers-count-con"><span class="followers-count">00</span><span>Followers</span></div>
                        <div class="following-count-con"><span class="following-count">00</span><span>Following</span></div>
                    </div>
                </div>

                <hr>

                <div class="profile-options-con">
                    <div class="options-con">
                        <div class="options-wrap-div">
                        <h2 class="prof-options-heading">Recent Activity</h2>
                        <hr>
                        <ul>

                            <li class="active" data-tab-target ="#recentlyViewed">Recently Viewed <i class="bi bi-chevron-right"></i></li>
                            <li data-tab-target ="#favourites">Favourites <i class="bi bi-chevron-right"></i></li>
                            <li data-tab-target ="#reviews">Reviews <i class="bi bi-chevron-right"></i></li>
                            
                        </ul>
                            </div>
                            <div class="options-wrap-div">
                         <h2 class="prof-options-heading">Bookings</h2>
                        <hr>
                        <ul>

                            <li  data-tab-target ="#yourBookings">Your Bookings <i class="bi bi-chevron-right"></i></li>
                           
                            
                        </ul>
                        </div>
                        <div class="options-wrap-div">
                        <h2 class="prof-options-heading">History</h2>
                        <hr>
                        <ul>

                            <li  data-tab-target ="#pastBookings">Past Bookings <i class="bi bi-chevron-right"></i></li>
                           

                        </ul>
                        </div>
                        <div class="options-wrap-div">
                        <h2 class="prof-options-heading">Account</h2>
                        <hr>
                        <ul>

                            <li><a href="/logout">Logout <i class="bi bi-chevron-right"></i></a></li>
                           

                        </ul>
                        </div>
                    </div>
                    <div class="options-dis-con">
                        <div class="active" id="recentlyViewed" data-tab-content>
