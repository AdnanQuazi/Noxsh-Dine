                            <div class="recent-view-con">

                                <template class="recent-view-template">
                                    <div class="restaurant-card">
                                    <span class="distance skeleton skeleton-text"></span>
                                    <img loading = "lazy" class="skeleton" src="/images/rest-demo.jpg" alt="">
                                    <div class="restaurant-details-wrap-div">
                                        <div class="restaurant-details-name-cuisine">
                                        <span class="restaurant-name skeleton skeleton-text"></span>
                                        <span class="cuisine-name skeleton skeleton-text"></span>
                                        <span class="restaurant-address skeleton skeleton-text"></span>
                                        </div>
                                        <div class="restaurant-rating-price-con">
                                            <span class="rating skeleton skeleton-text"></span>
                                            <span class="price skeleton skeleton-text"></span>
                                        </div>
                                    </div>

                                </div>
                                </template>



                            </div>
                        </div>
                        <div  id="favourites" data-tab-content>
                             <h2><i class="bi bi-chevron-left"></i>Favourites</h2>
                             <div class="fav-view-con">
                                 
                             </div>
                        </div>
                        <div id="reviews" data-tab-content>
                             <h2><i class="bi bi-chevron-left"></i>Reviews</h2>
                             <div class="review-view-con">
                                
                                    
                                
                             </div>
                        </div>
                        <div  id="yourBookings" data-tab-content>
                             <h2><i class="bi bi-chevron-left"></i>Your Bookings</h2>
                             <div class="your-bookings-view-con">
                                 
                             </div>
                        </div>
                        <div  id="pastBookings" data-tab-content>
                             <h2><i class="bi bi-chevron-left"></i>Past Bookings</h2>
                             <div class="past-bookings-view-con"></div>
                        </div>  
                        
                    </div>
                </div>
